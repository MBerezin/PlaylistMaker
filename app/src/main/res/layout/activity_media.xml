<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.media.activity.MediaActivity"
    android:background="@color/settings_background"
    android:paddingTop="14dp"
    android:paddingLeft="@dimen/paddingHorizontal"
    android:paddingRight="@dimen/paddingHorizontal"
    android:paddingBottom="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="@string/mediathek"
        android:backgroundTint="@color/settings_background"
        app:navigationIcon="@drawable/arrowback"
        app:titleTextColor="@color/search_header"
        app:titleTextAppearance="@style/toolbar_text"
        android:layout_marginLeft="-16dp"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout >