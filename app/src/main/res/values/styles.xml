<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btn_main" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconTint">@color/icon_main</item>
        <item name="iconPadding">@dimen/icon_main_padding</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="img_settings">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/icon_settings_margin_end</item>
    </style>

    <style name="text_settings">
        <item name="android:textColor">@color/text_settings</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="frame_layout_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/row_height</item>
    </style>

    <style name="toolbar_text">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>